<h2>All Projects</h2>

<table class="table">
  <tr>
    <th>Project Name</th>
    <th colspan="3">Owner</th>
  </tr>
  <%= for project <- @projects do %>
    <tr>
      <td><%= project.name %></td>
      <td><%= get_user(project.user_id).username %></td>
      <td><%= get_user(project.user_id).name %></td>
      <td>
        <%= link "View", to: project_path(@conn, :show, project.id), class: "btn btn-primary btn-xs" %>
        <%= link "Edit", to: project_path(@conn, :edit, project.id), class: "btn btn-info btn-xs" %>
        <%= link "Delete", to: project_path(@conn, :delete, project.id), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
  <% end %>
</table>

<%= link "Create New Project", to: project_path(@conn, :new), class: "btn btn-primary" %>
